generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

// ╔╦╗╔═╗╔╦╗╔═╗╦  ╔═╗                                
// ║║║║ ║ ║║║╣ ║  ╚═╗                                
// ╩ ╩╚═╝═╩╝╚═╝╩═╝╚═╝
model Habit {
    id         String   @id @default(uuid())
    title      String
    created_at DateTime

    // Nome que deseja criar a tabela no banco - ex abaixo: tabela habits (hábitos)
    @@map("habits")
}
